						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "whatsapp_number",
									"value": "+923001234567",
									"type": "text"
								},
								{
									"key": "profile_image",
									"type": "file",
									"src": []
								},
								{
									"key": "cnic_image",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/moderation/verifications/request_user_verification/",
							"host": ["{{base_url}}"],
							"path": ["moderation", "verifications", "request_user_verification"]
						},
						"description": "Start user verification process"
					}
				},
				{
					"name": "Verify WhatsApp OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/moderation/verifications/{{verification_id}}/verify_whatsapp/",
							"host": ["{{base_url}}"],
							"path": ["moderation", "verifications", "{{verification_id}}", "verify_whatsapp"]
						},
						"description": "Verify WhatsApp number using OTP"
					}
				},
				{
					"name": "Check Verification Status",
					"request": {
						"method": "GET",
						"header": [
